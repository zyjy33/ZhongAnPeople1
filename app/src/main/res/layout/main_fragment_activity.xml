<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
        
    </FrameLayout>
    
     
<RadioGroup
        android:id="@+id/main_bottom_rtns"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal" >

        <RadioButton
             android:id="@+id/main_bottom_rtn0"
             style="@style/tab_rb_style"
             android:text="首页"
             android:textSize="12dp"
            android:drawableTop="@drawable/main_bottom_btn0"
             />

        <RadioButton
            android:id="@+id/main_bottom_rtn1"
            style="@style/tab_rb_style"
              android:text="服务"
             android:textSize="12dp"
            android:drawableTop="@drawable/main_bottom_btn1"
           />
       <RadioButton
              android:id="@+id/main_bottom_rtn2"
            style="@style/tab_rb_style"
             android:text="活动"
             android:textSize="12dp"
            android:drawableTop="@drawable/main_bottom_btn2"
            />

        <RadioButton
            android:id="@+id/main_bottom_rtn3"
            style="@style/tab_rb_style"
             android:text="购物车"
             android:textSize="12dp"
            android:drawableTop="@drawable/main_bottom_btn3"
          />

        <RadioButton
              android:id="@+id/main_bottom_rtn4"
            style="@style/tab_rb_style"
             android:text="我的"
             android:textSize="12dp"
            android:drawableTop="@drawable/main_bottom_btn4"
              />
    </RadioGroup>
</LinearLayout>