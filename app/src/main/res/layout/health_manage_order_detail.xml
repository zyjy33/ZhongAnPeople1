<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <RelativeLayout
         android:id="@+id/rl_title"
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:layout_alignParentTop="true"
         android:layout_gravity="center_horizontal"
         android:background="@color/ybs" >

         <TextView
             android:id="@+id/textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:text="详情"
             android:textSize="18dip" />


         <ImageView
             android:id="@+id/iv_fanhui"
             android:layout_width="wrap_content"
             android:layout_height="20dp"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:layout_marginLeft="10dp"
             android:src="@drawable/fanhuijian"
             android:textSize="18dip" />

     </RelativeLayout>
     <ImageView 
    android:layout_width="match_parent"
    android:layout_height="120dp"
   
    android:id="@+id/pic"/> 
    <RelativeLayout 
         android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp">
         <LinearLayout 
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:orientation="vertical"
             >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:text="餐前血糖"
                 android:id="@+id/name"
                 android:textColor="@color/zams_zt_ys"/>
              <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:text="每月体检30人"
                 android:id="@+id/num"
                 android:textSize="10sp"
                 android:gravity="center_vertical"
                 android:textColor="#999"/>
               <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:text="25元或250积分"
                 android:id="@+id/money"
                  android:textSize="11sp"
                   android:gravity="center_vertical"
                 android:textColor="#ff9250"/>
         </LinearLayout>
        <TextView 
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:text="加入订单"
             android:textColor="#ff9250"
             android:gravity="center"
             android:layout_marginRight="20dp"
             android:id="@+id/add_order"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="15dp" 
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/list_item_line"
        />
    <TextView 
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:text="服务详情"
        android:layout_margin="10dp"
       />
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content"/>
  </LinearLayout>  

</ScrollView>
