<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/ybs" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="代注册"
            android:textSize="18dip" />

        <ImageView
            android:id="@+id/iv_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/fanhuijian"
            android:textSize="18dip" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/zhou_btn_red_3_5_shanchu_bg"
        android:gravity="center"
        android:hint="请输入用户姓名"
        android:inputType="text"
        android:maxLength="20"
        android:singleLine="true"
        android:textColor="@color/all_wenzi"
        android:textColorHint="@color/all_c1c1c1"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_user_sfzh"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/zhou_btn_red_3_5_shanchu_bg"
        android:gravity="center"
        android:hint="请输入用户身份证号"
        android:imeOptions="actionNext"
        android:maxLength="30"
        android:singleLine="true"
        android:textColor="@color/all_wenzi"
        android:textColorHint="@color/all_c1c1c1"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@color/white" >

        <EditText
            android:id="@+id/et_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/zhou_btn_red_3_5_shanchu_bg"
            android:gravity="center"
            android:hint="请输入用户手机号"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/all_wenzi"
            android:textColorHint="@color/all_c1c1c1"
            android:textSize="16sp" />

        <Button
            android:id="@+id/get_yz"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_red_3_5_yzm"
            android:ems="6"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/zamsys" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_user_yz"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/zhou_btn_red_3_5_shanchu_bg"
        android:gravity="center"
        android:hint="请输入验证码"
        android:inputType="number"
        android:maxLength="10"
        android:singleLine="true"
        android:textColor="@color/all_wenzi"
        android:textColorHint="@color/all_c1c1c1"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_user_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/zhou_btn_red_3_5_shanchu_bg"
        android:gravity="center"
        android:hint="请输入（8-20位）密码"
        android:imeOptions="actionNext"
        android:maxLength="20"
        android:password="true"
        android:singleLine="true"
        android:textColor="@color/all_wenzi"
        android:textColorHint="@color/all_c1c1c1"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_red_3_5_login"
        android:text="注册"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/ck_xuanzhe"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/checkbox_shangjia"
            android:button="@null"
            android:checked="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="注册即表示同意"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/regise_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《中安民生服务与用户协议》"
            android:textColor="@color/zamsys" >
        </TextView>
    </LinearLayout>
<!-- android:cursorVisible="false" -->
</LinearLayout>