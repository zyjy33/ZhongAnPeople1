<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:orientation="horizontal"
            android:paddingBottom="13dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/point" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/point" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/point" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/point" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/huise"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
             android:id="@+id/tv_wenzi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="会员行为数字化"
            android:textColor="@color/black"
            android:textSize="25sp" />
<LinearLayout
            android:id="@+id/ll_yindaoye1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             >
            <ImageView
                 android:id="@+id/iv_yindaoye1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ydy_jd2" 
                />

            <ImageView
                android:id="@+id/iv_yindaoye2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ydy_jd1" />

            <ImageView
                android:id="@+id/iv_yindaoye3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ydy_jd1" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_yindaoye2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal"
             >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ydy_jd1" 
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ydy_jd2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ydy_jd1" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_yindaoye3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal"
             >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ydy_jd1" 
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ydy_jd1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ydy_jd2" />
        </LinearLayout>
        <Button
            android:id="@+id/bv_experience"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:background="@drawable/bg_red_3_5_ydy"
            android:text="立即体验"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:visibility="gone"
            />
    </LinearLayout>

</LinearLayout>