<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout
         android:id="@+id/rl_title"
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:layout_alignParentTop="true"
         android:layout_gravity="center_horizontal"
         android:background="@color/ybs" >

         <TextView
             android:id="@+id/textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:text="代注册"
             android:textSize="18dip" />


         <ImageView
             android:id="@+id/iv_fanhui"
             android:layout_width="wrap_content"
             android:layout_height="20dp"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:layout_marginLeft="10dp"
             android:src="@drawable/fanhuijian"
             android:textSize="18dip" />

     </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
       
    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white" 
                >

                    <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/shoujihao" />
                
                <EditText
                     android:id="@+id/et_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:hint="请输入用户姓名"
                    android:maxLength="20"
                    android:singleLine="true"
                     android:inputType="text"
                                 android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
                    android:textColor="@color/all_wenzi"
                    android:textColorHint="@color/all_c1c1c1"
                    android:background="@null"
                    android:textSize="16sp" />
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="50dp"
                    android:background="@color/gray" />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white" 
                >

                    <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/shoujihao" />
                
                <EditText
                     android:id="@+id/et_user_sfzh"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:hint="请输入用户身份证号"
                    android:maxLength="30"
                        android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="@color/all_wenzi"
                    android:textColorHint="@color/all_c1c1c1"
                    android:textSize="16sp" />
            </LinearLayout>
            
             <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="50dp"
                    android:background="@color/gray" />
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white" >

                    <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/shoujihao" />

                
                <EditText
                     android:id="@+id/et_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:maxLength="20"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textColor="@color/all_wenzi"
                    android:textColorHint="@color/all_c1c1c1"
                    android:textSize="16sp" />
                  <Button
                    android:id="@+id/get_yz"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_red_3_5_yzm"
                    android:ems="6"
                      android:textColor="@color/zamsys"
                    android:gravity="center"
                    android:text="获取验证码" />
            </LinearLayout>
              <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="50dp"
                    android:background="@color/gray" />
               <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white" >

                    <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/yzmtp" />

                
                <EditText
                     android:id="@+id/et_user_yz"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:maxLength="20"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textColor="@color/all_wenzi"
                    android:textColorHint="@color/all_c1c1c1"
                    android:textSize="16sp" />
            </LinearLayout>
              <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="50dp"
                    android:background="@color/gray" />
                     <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white" >

                    <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/mima" />

                
                <EditText
                     android:id="@+id/et_user_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:hint="请输入（6-20位）密码"
                    android:maxLength="20"
                    android:singleLine="true"
                        android:imeOptions="actionNext"
                     android:password="true"
                    android:textColor="@color/all_wenzi"
                    android:textColorHint="@color/all_c1c1c1"
                    android:textSize="16sp" />
            </LinearLayout>
             <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />
<Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_red_3_5_login"
                android:text="注册"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/ck_xuanzhe"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:checked="true"
                    android:background="@drawable/checkbox_shangjia"
                    android:button="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="注册即表示同意"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/regise_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《中安民生服务与用户协议》"
                    android:textColor="@color/zamsys"
                     >
                </TextView>
            </LinearLayout>
             

</LinearLayout>