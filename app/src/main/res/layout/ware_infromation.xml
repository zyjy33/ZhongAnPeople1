<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@drawable/title"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="18dip" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_ware_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#f0f0f0"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_wareimg"
                    android:layout_width="match_parent"
                    android:layout_height="210dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:textColor="#000000"
                android:textSize="18dip" />

            <LinearLayout
                android:id="@+id/ll_money"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="云聚价:"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_ware_hengyu_money"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="40dip"
                    android:text="市场价:"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_ware_market_money"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="#666666" />
            </LinearLayout>

                <LinearLayout
                android:id="@+id/ll_money"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="聚红包:"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_ware_market_jifen"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="40dip"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="#666666" />
            </LinearLayout>

            <ImageView 
                android:id="@+id/img_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/jiangexianlong" />

            <LinearLayout
                android:id="@+id/ll_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >
            </LinearLayout>

            <ImageView
                android:id="@+id/img_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/jiangexianlong" />

            <LinearLayout
                android:id="@+id/ll_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_dianping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_collect_select"
                    android:text="点评"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btn_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_collect_select"
                    android:text="收藏"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btn_add_shop_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:layout_weight="2"
                    android:background="@drawable/btn_add_shop_cart_select"
                    android:text="加入购物车"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TabHost
                    android:id="@+id/maintabhost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f0f0f0" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >

                        <FrameLayout
                            android:id="@android:id/tabcontent"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center" />

                        <TabWidget
                            android:id="@android:id/tabs"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:padding="3.0dip" />
                    </RelativeLayout>
                </TabHost>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>