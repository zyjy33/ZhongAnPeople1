                                  android:layout_marginRight="5dp"
                                  android:gravity="center"
                                  android:textColor="@color/juhongse"
                                  android:textSize="15sp" />
                      <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/white" >
                    <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/juhongse" />
                    </LinearLayout>
                      </LinearLayout>
                      <LinearLayout
                android:id="@+id/img_btn_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white" >

                          <LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:layout_marginLeft="15dp"
                              android:gravity="center_vertical" >

                              <ImageView
                                  android:layout_width="30dp"
                                  android:layout_height="30dp"
                                  android:layout_marginLeft="0dp"
                                  android:src="@drawable/gbxfln" />
<LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:layout_marginLeft="10dp"
                              android:orientation="vertical"
                              android:gravity="center_vertical" >
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="改变消费理念"
                                  android:textColor="@color/black"
                                  android:textSize="14sp" />
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="创导美国式的消费理念，一辈子都在享受生活；"
                                  android:textColor="@color/post_work_item"
                                  android:textSize="12sp" />
                              </LinearLayout>
                          </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white" >

                          <LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:layout_marginLeft="15dp"
                              android:gravity="center_vertical" >

                              <ImageView
                                  android:layout_width="30dp"
                                  android:layout_height="30dp"
                                  android:layout_marginLeft="0dp"
                                  android:src="@drawable/tgyzwn" />
<LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:layout_marginLeft="10dp"
                              android:orientation="vertical"
                              android:gravity="center_vertical" >
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="提供优质晚年"
                                  android:textColor="@color/black"
                                  android:textSize="14sp" />
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="首创保险众筹再分配，为用户带来稳健收益；"
                                  android:textColor="@color/post_work_item"
                                  android:textSize="12sp" />
                              </LinearLayout>
                          </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white" >

                          <LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:layout_marginLeft="15dp"
                              android:gravity="center_vertical" >

                              <ImageView
                                  android:layout_width="30dp"
                                  android:layout_height="30dp"
                                  android:layout_marginLeft="0dp"
                                  android:src="@drawable/wqbz" />
<LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:layout_marginLeft="10dp"
                              android:orientation="vertical"
                              android:gravity="center_vertical" >
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="完全保障"
                                  android:textColor="@color/black"
                                  android:textSize="14sp" />
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="由各大保险公司为你保驾护航；"
                                  android:textColor="@color/post_work_item"
                                  android:textSize="12sp" />
                              </LinearLayout>
                          </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white" >

                          <LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:layout_marginLeft="15dp"
                              android:gravity="center_vertical" >

                              <ImageView
                                  android:layout_width="30dp"
                                  android:layout_height="30dp"
                                  android:layout_marginLeft="0dp"
                                  android:src="@drawable/szsy" />
<LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="1"
                              android:layout_marginLeft="10dp"
                              android:orientation="vertical"
                              android:gravity="center_vertical" >
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="双重收益"
                                  android:textColor="@color/black"
                                  android:textSize="14sp" />
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="报低收益加额外高收益；"
                                  android:textColor="@color/post_work_item"
                                  android:textSize="12sp" />
                              </LinearLayout>
                          </LinearLayout>

            </LinearLayout>
		</LinearLayout>
