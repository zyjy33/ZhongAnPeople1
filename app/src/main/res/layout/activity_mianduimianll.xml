<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFAEF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/ybs" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="面对面推广"
            android:textSize="18dip" />

        <ImageView
            android:id="@+id/iv_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/fanhuijian"
            android:textSize="18dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_fanhui"
            android:layout_marginRight="17dp"
            android:text=""
            android:textSize="18dip" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
    

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
      
            <RelativeLayout
                   android:id="@+id/rl_tupian"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="0dp"
                >
                 <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
            android:orientation="vertical" >
            
             <LinearLayout
                 android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="vertical" >
                <ImageView
                    android:id="@+id/iv_qr_image1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY" />
                <ImageView
                    android:id="@+id/iv_qr_image"
                    android:layout_width="120dp"
                    android:layout_height="115dp"
                    android:visibility="gone"
                    android:scaleType="fitXY" />
            </LinearLayout>

                <ImageView
                    android:id="@+id/iv_qr_image2"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY" />
                   </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="可添加多个好友，么么哒!"
                android:textColor="@color/black"
                android:textSize="15sp" />
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_red_3_5_shurumonney"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/et_haoma"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请输入好友手机号"
                        android:inputType="number"
                        android:maxLength="11"
                         android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/all_wenzi"
                        android:textColorHint="@color/all_c1c1c1"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_data"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_red_3_5_login"
                android:text="请添加"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="您已邀请人数"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_geshu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>
            
            
            
                </LinearLayout>
                <ListView 
       android:id="@+id/myList"
       android:layout_marginTop="0dp"
       android:layout_margin="10dp"
       android:layout_height="match_parent"
       android:layout_width="fill_parent"/>

</LinearLayout>