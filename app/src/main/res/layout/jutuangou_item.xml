                    <TextView
                        android:id="@+id/tv_groupon_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="￥0.50"
                        android:gravity="center"
                        android:textColor="@color/chunhongse"
                        android:textSize="18sp" />
