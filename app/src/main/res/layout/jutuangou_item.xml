                         android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="￥28.00"
                        android:gravity="center"
                        android:textColor="@color/all_wenzi"
                        android:textSize="13sp" />
                </LinearLayout>

                
                

                <TextView
                    android:id="@+id/tv_anniu"
                    android:layout_width="wrap_content"
