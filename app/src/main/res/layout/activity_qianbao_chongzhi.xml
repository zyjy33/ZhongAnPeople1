<?xml version="1.0" encoding="utf-8"?>
 <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ScrollView01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F9F5F5"
    
             >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
  <LinearLayout
      android:id="@+id/yu_pay0"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                   android:orientation="vertical"
                >
                
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                     android:orientation="horizontal"
                >
                 <ImageView
             android:id="@+id/iv_fanhui"
             android:layout_width="wrap_content"
             android:layout_height="20dp"
             android:layout_marginLeft="10dp"
             android:layout_gravity="center_vertical"
             android:src="@drawable/fanhuijian"
             android:textSize="18dip" />

         <TextView
             android:id="@+id/textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
             android:layout_marginLeft="10dp"
             android:textColor="#A5A4A4"
             android:text="充值"
             android:textSize="18dip" />
                </LinearLayout>
   <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
             android:layout_marginLeft="15dp"
             android:layout_marginTop="30dp"
             android:textColor="#FFFFFF"
             android:text="我的钱包（元）"
             android:textSize="18dip" />
    
         <TextView
             android:id="@+id/tv_monney"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
             android:layout_marginLeft="15dp"
             android:layout_marginTop="25dp"
             android:textColor="#FFFFFF"
             android:text=""
             android:textSize="50dip" />
          </LinearLayout>
         
        
            
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                 android:gravity="center"
                android:padding="20dp"
                >
              <Button
                android:id="@+id/chongzhi_submit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_red_3_5_login"
                android:text="充值"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
              <Button
                android:id="@+id/img_title_registre"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_red_3_5_tixian"
                android:text="提现"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
            </LinearLayout>

</LinearLayout>
</ScrollView>