<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fly_cang1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="196"
            android:gravity="center"
            android:text="经济舱       /剩余票量:5"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fly_cang2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="156"
            android:gravity="center"
            android:text="退改签"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="151"
            android:gravity="center" >

            <TextView
                android:id="@+id/fly_cang3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:text="142"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fly_cang4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3折"
                android:textColor="@android:color/background_dark"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="139"
            android:gravity="center" >

            <Button
                android:id="@+id/fly_cang5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="4dp"
                android:text="预订"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>