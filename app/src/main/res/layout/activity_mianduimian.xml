<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dihuise"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/ybs" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="面对面推广"
            android:textSize="18dip" />

        <ImageView
            android:id="@+id/iv_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/fanhuijian"
            android:textSize="18dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_fanhui"
            android:layout_marginRight="17dp"
            android:text=""
            android:textSize="18dip" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
    
      

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="可添加多个好友，么么哒!"
                android:textColor="@color/black"
                android:textSize="15sp" />
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="0dp"
                 android:background="@color/dihuise"
                android:orientation="vertical" >
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                  android:background="@color/white"
                android:orientation="vertical"
                 >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/bg_red_3_5_shurumonney"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/et_haoma"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入好友手机号"
                        android:paddingLeft="15dp"
                        android:inputType="number"
                        android:maxLength="11"
                        android:text=""
                        android:singleLine="true"
                        android:textColor="@color/all_wenzi"
                        android:textColorHint="@color/all_c1c1c1"
                        android:textSize="15sp" />
                      <Button
                android:id="@+id/btn_data"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/tianjian"
                />
                </LinearLayout>
            </LinearLayout>
<ImageView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/fgx"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="您已邀请人数"
                        android:textColor="@color/all_c1c1c1"
                        android:textSize="15sp" />
                    <TextView
                    android:id="@+id/tv_geshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:textColor="@color/all_c1c1c1"
                    android:textSize="15sp" />
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="人"
                    android:textColor="@color/all_c1c1c1"
                    android:textSize="15sp" />
                </LinearLayout>

                <ImageView
                     android:id="@+id/im_shanchu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/mdm_shanchu" />
                <TextView
                    android:id="@+id/tv_shanchu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:text="清楚全部"
                    android:textColor="@color/hongse"
                    android:textSize="15sp" />
            </LinearLayout>
            <ListView 
       android:id="@+id/myList"
       android:layout_marginTop="0dp"
       android:layout_margin="10dp"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"/>
            
            </LinearLayout>
            <View
                  android:id="@+id/iv_dihua"
                android:layout_width="match_parent"
                 android:layout_marginTop="0dp"
                android:layout_height="15dp"
                 />
            
                </LinearLayout>
                 <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                android:background="@color/list_item_line" />

            <LinearLayout
                android:id="@+id/ll_mdm_sys"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/mdm_sys" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="面对面扫一扫"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/yjf" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/list_item_line" />

            <LinearLayout
                android:id="@+id/ll_fx_zshb"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/fxhb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="分享专属海报"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/yjf" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/list_item_line" />

</LinearLayout>