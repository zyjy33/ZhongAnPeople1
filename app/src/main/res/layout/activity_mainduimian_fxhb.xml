<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:scaleType="fitXY"
         android:background="@drawable/zams_haibao1"
        />

       <LinearLayout
            android:id="@+id/ll_user_buju"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/ybs" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="分享专属海报"
            android:textSize="18dip" />

        <ImageView
            android:id="@+id/iv_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/fanhuijian"
            android:textSize="18dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_fanhui"
            android:layout_marginRight="17dp"
            android:text=""
            android:textSize="18dip" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
    <LinearLayout
         android:id="@+id/ll_zhuti"
                android:layout_width="220dp"
              android:layout_height="350dp"
             android:layout_gravity="center"
             android:scaleType="fitXY"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
                android:orientation="vertical" >
        <!-- android:background="@drawable/ysj_haibao1"
         android:background="@color/white"
         -->
        
        <com.example.taobaohead.headview.RoundImageView
            android:id="@+id/roundImage_network"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/app_zams"  
            android:layout_gravity="center"
                    android:layout_marginTop="45dp"
             />
            <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_marginTop="125dp"
         android:layout_marginRight="0dp"
         android:padding="0dp"
         android:layout_gravity="center_horizontal"
          >

         <ImageView
             android:id="@+id/iv_qr_image1"
             android:layout_width="80dp"
             android:layout_height="78dp"
             android:scaleType="fitXY"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true" />
     </RelativeLayout>
     </LinearLayout>
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
             >

            <Button
                android:id="@+id/btn_fenxiang"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/btn_red_3_5_bg"
                android:text="分享给好友"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />
            <Button
                android:id="@+id/btn_zhuti"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/btn_red_3_5_bg"
                android:text="更换主题"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />
        </LinearLayout>
        
   <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
              android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
            android:text="专属海报操作提示"
            android:textSize="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
              android:textColor="@color/all_c1c1c1"
            android:text="1.本次海报只分享给专属好友，想要分享给其他好友，必须再次输入好友手机号。"
            android:textSize="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:textColor="@color/all_c1c1c1"
            android:text="2.分享海报给好友有惊喜哦。"
            android:textSize="16dp" />
        </LinearLayout>
        </LinearLayout>
</LinearLayout>