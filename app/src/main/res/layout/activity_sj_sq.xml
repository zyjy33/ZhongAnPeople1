<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_buju"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
                                <com.lglottery.www.widget.MyPosterServiceView
                        android:id="@+id/adv_pagerll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                    </com.lglottery.www.widget.MyPosterServiceView>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dp" >

        <Button
            android:id="@+id/btn_settle_accounts"
            android:layout_width="match_parent"
            android:layout_height="45dp"
              android:layout_margin="12dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_red_3_5_bg"
            android:text="立即申请"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingBottom="0dp" >

        <ImageView
             android:id="@+id/iv_anniu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:visibility="gone"
            android:padding="5dp"
            android:src="@drawable/point" />

        <ImageView
             android:id="@+id/iv_anniu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
             android:visibility="gone"
            android:padding="5dp"
            android:src="@drawable/point" />

        <ImageView
             android:id="@+id/iv_anniu3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
             android:visibility="gone"
            android:padding="5dp"
            android:src="@drawable/point" />
        <ImageView
             android:id="@+id/iv_anniu4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
             android:visibility="gone"
            android:padding="5dp"
            android:src="@drawable/point" />
        <ImageView
             android:id="@+id/iv_anniu5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
             android:visibility="gone"
            android:padding="5dp"
            android:src="@drawable/point" />

    </LinearLayout>

</RelativeLayout>