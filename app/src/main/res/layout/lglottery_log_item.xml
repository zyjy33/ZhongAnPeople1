<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="172"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/lglottery_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/no_image" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="374"
            android:orientation="vertical"
            android:paddingLeft="5dp" >

            <TextView
                android:id="@+id/lglottery_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="第N期"
                android:textColor="@color/person_btn_text"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/lglottery_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="173"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lglottery_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="2013-11-11"
                android:lines="2"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/lglottery_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="未结束"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>