<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/v1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:ems="2"
            android:gravity="center"
            android:text="站次"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/v2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:ems="5"
            android:gravity="left|center_vertical"
            android:text="站名"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/v3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:ems="3"
            android:gravity="center"
            android:text="发时"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/v4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:ems="3"
            android:gravity="center"
            android:text="到时"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/v5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:ems="2"
            android:gravity="center"
            android:text="停留"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/v6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:ems="4"
            android:gravity="center"
            android:text="里程"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/v7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:ems="3"
            android:gravity="center"
            android:text="硬座"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/v8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:ems="8"
            android:gravity="left|center_vertical"
            android:text="硬卧"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/v9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:ems="8"
            android:gravity="left|center_vertical"
            android:text="软卧"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>