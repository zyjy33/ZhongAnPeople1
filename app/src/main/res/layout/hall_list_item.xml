<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/hall_item_img"
        android:layout_width="90dp"
        android:layout_height="78dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hall_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color333"
                android:textSize="14sp" />

            <!--<ImageView-->
            <!--android:id="@+id/shop_iv"-->
            <!--android:layout_width="29dp"-->
            <!--android:layout_height="29dp"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:src="@drawable/shop_cart" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <com.lglottery.www.widget.GoodsNumControlView
                android:id="@+id/hall_goods_num_control"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_margin" />
        </LinearLayout>

        <TextView
            android:id="@+id/hall_money_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/color999"
            android:textSize="13sp" />

    </LinearLayout>


</LinearLayout>