<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="#5c5c5c" >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="乘机人信息提交"
            android:textColor="@android:color/white"
            android:textSize="20dip" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f0f0"
            android:orientation="vertical"
            android:padding="15dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:ems="5"
                        android:gravity="center_vertical"
                        android:text="联系人:"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/fly_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:ems="10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:ems="5"
                        android:gravity="center_vertical"
                        android:text="联系手机:"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/fly_detail_bil"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:ems="10" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="订单信息"
                        android:textColor="@android:color/background_dark"
                        android:textSize="21sp" />

                    <EditText
                        android:id="@+id/fly_detiail_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:ems="12"
                        android:gravity="center_vertical"
                        android:hint="乘机人姓名"
                        android:paddingLeft="4dp"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/fly_detiail_card_l"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:ems="16"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:singleLine="true"
                        android:tag="2"
                        android:text="成人" />

                    <TextView
                        android:id="@+id/fly_detiail_card_c"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:ems="16"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:singleLine="true"
                        android:tag="1"
                        android:text="身份证" />

                    <EditText
                        android:id="@+id/fly_detiail_card_num"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:ems="12"
                        android:gravity="center_vertical"
                        android:hint="证件号码"
                        android:paddingLeft="4dp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/fly_detiail_card_mob"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:ems="12"
                        android:gravity="center_vertical"
                        android:hint="联系人手机"
                        android:paddingLeft="4dp"
                        android:singleLine="true" />

                    <Button
                        android:id="@+id/fly_detail_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="8dp"
                        android:text="添加联系人" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="乘机人"
                        android:textColor="@android:color/background_dark"
                        android:textSize="21sp" />

                    <ListView
                        android:id="@+id/fly_detail_list"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/no_color"
                        android:cacheColorHint="@color/no_color"
                        android:divider="@null"
                        android:dividerHeight="10dp"
                        android:scrollbars="none" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="配送方式"
                        android:textColor="@android:color/background_dark"
                        android:textSize="21sp" />

                    <LinearLayout
                        android:layout_width="220dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="20dp"
                        android:padding="10dp" >

                        <RadioGroup
                            android:id="@+id/fly_detail_isneed"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <RadioButton
                                android:id="@+id/fly_detail_noneed"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />

                            <RadioButton
                                android:id="@+id/fly_detail_need"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="8dp" />
                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="不需要报销凭证" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="邮寄报销凭证" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/need"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:visibility="invisible" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货地址:"
                            android:textColor="@android:color/background_dark"
                            android:textSize="21sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:ems="5"
                                android:text="收件人:"
                                android:textSize="17sp" />

                            <EditText
                                android:id="@+id/fly_detail_p_name"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginLeft="8dp"
                                android:ems="10"
                                android:singleLine="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:ems="5"
                                android:text="联系手机:"
                                android:textSize="17sp" />

                            <EditText
                                android:id="@+id/fly_detail_p_mob"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginLeft="8dp"
                                android:ems="10"
                                android:singleLine="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:ems="5"
                                android:text="联系地址:"
                                android:textSize="17sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <Spinner
                                    android:id="@+id/advert_order_province"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center" >
                                </Spinner>

                                <Spinner
                                    android:id="@+id/advert_order_city"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center" >
                                </Spinner>

                                <Spinner
                                    android:id="@+id/advert_order_area"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center" >
                                </Spinner>
                            </LinearLayout>
                        </LinearLayout>

                        <EditText
                            android:id="@+id/fly_detail_p_add"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:ems="17"
                            android:singleLine="true" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <Button
                            android:id="@+id/fly_detail_send"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:text="提交订单"
                            android:textColor="@color/white"
                            android:textSize="22sp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>