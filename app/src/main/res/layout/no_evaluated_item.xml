<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/order_num"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="订单号：12345678912346"
        android:textColor="@color/title_color"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no_evaluated_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_marginRight="@dimen/app_margin"
            android:text="2018-05-05"
            android:textColor="@color/content_color"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/app_margin"
            android:text="待评价订单"
            android:textColor="@color/content_color"
            android:textSize="14sp" />
    </LinearLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/grid_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1491d9"
        app:columnCount="5"
        app:orientation="vertical"
        app:rowCount="1">

        <TextView
            style="@style/NoEvaluatedGridTitleTv"
            android:text="序号"
            app:layout_columnWeight="1" />

        <TextView
            style="@style/NoEvaluatedGridTitleTv"
            android:text="体检名称"
            app:layout_columnWeight="1" />

        <TextView
            style="@style/NoEvaluatedGridTitleTv"
            android:text="体验结果"
            app:layout_columnWeight="1" />

        <TextView
            style="@style/NoEvaluatedGridTitleTv"
            android:text="正常范围"
            app:layout_columnWeight="1" />

        <TextView
            style="@style/NoEvaluatedGridTitleTv"
            android:text="体检备注"
            app:layout_columnWeight="1" />
    </android.support.v7.widget.GridLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@color/transparent" />


    <TextView
        android:id="@+id/evaluated_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/app_margin"
        android:background="@drawable/assess_flag_bg"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="5dp"
        android:text="评价"
        android:textColor="@color/orange_color"
        android:textSize="18sp" />


</LinearLayout>