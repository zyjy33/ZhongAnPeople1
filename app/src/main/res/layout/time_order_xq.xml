<!-- 主页 -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="@color/baihuise"
    android:scrollbars="none" >

    <LinearLayout
        android:id="@+id/lv_system_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 订单项目 -->
<View
                android:layout_width="fill_parent"
                android:layout_height="10px"
                android:background="@color/baihuise" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            android:orientation="vertical" >
 <LinearLayout
                android:id="@+id/img_btn_address"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/user_order_manager" />

                    <TextView
                         android:id="@+id/tv_sj_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="商家名称"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/list_arrow" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_zhuangtai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:text=""
                    android:textColor="@color/juhongse" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/all_c1c1c1" />
                <LinearLayout
                     android:id="@+id/ll_xinxi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            >
            <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/order_dizhi" />
            
                <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/white"
            android:orientation="vertical" >
            <TextView
                        android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textSize="14sp"
                    android:text="收货人:" />
             <TextView
                        android:id="@+id/tv_haoma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                     android:textSize="14sp"
                    android:text="电话号码:" />
            
            <TextView
                        android:id="@+id/tv_dizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                     android:textSize="14sp"
                    android:text="收货地址:" />
            
            </LinearLayout>
                    
            </LinearLayout>
            
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/all_939393" />
<LinearLayout
                android:id="@+id/gwc_addview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="10px"
                android:background="@color/baihuise" />
                 <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/all_c1c1c1" />
                 
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="实付款"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/list_arrow" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_heji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:textSize="15sp"
                    android:text="￥0.00"
                    android:textColor="@color/juhongse" />
                <TextView
                     android:id="@+id/tv_yunfei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                     android:textSize="12sp"
                    android:text="（含运费￥0.00）" />
            </LinearLayout>       
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/all_c1c1c1" />  
                          <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                 android:orientation="vertical"
                 >
                          <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 >
             <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                     android:textSize="13sp"
                    android:text="订单编号:" />
              <TextView
                        android:id="@+id/tv_order_bh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                     android:textSize="13sp"
                    android:text="" />
             
            </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >
             <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                     android:textSize="13sp"
                    android:text="创建时间:" />
              <TextView
                        android:id="@+id/tv_order_cjsj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                     android:textSize="13sp"
                    android:text="" />
             
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_zf_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:orientation="horizontal"
                >
              
             <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                     android:textSize="13sp"
                    android:text="付款时间:" />
              <TextView
                        android:id="@+id/tv_order_fksj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                     android:textSize="13sp"
                    android:text="" />
             
            </LinearLayout>
             <LinearLayout
                 android:id="@+id/ll_wc_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:orientation="horizontal"
                >
              
             <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                     android:textSize="13sp"
                    android:text="成交时间:" />
              <TextView
                        android:id="@+id/tv_order_chengjiao_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                     android:textSize="13sp"
                    android:text="" />
             
            </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="15px"
                android:background="@color/baihuise" />


        <View
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:background="@color/all_939393" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>